@model OnlineShop.Models.Product
@{ 
    ViewData["Title"] = "Confirm to remove";
}
<h3 class="text-danger">Are you sure that you want to remove @Model.Name from the cart?</h3>
<form method="post">
    <div class="row">
        <div class="col-5">
            <dl class="row">
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-8">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.Price)
                </dt>
                <dd class="col-8">
                    @Html.DisplayFor(model => model.Price);
                </dd>
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.ProductType.Type)
                </dt>
                <dd class="col-8">
                    @Html.DisplayFor(model => model.ProductType.Type)
                </dd>
                <dt class="col-4">
                    @Html.DisplayNameFor(model => model.ProductColor)
                </dt>
                <dd class="col-8">
                    @Html.DisplayFor(model => model.ProductColor)
                </dd>
            </dl>
        </div>
        <div class="col-1"></div>
        <div class="col-5">
            <img src="~/@Model.Image" alt="Product Image" class="col-12" />
        </div>
    </div>
    <div class="row">
        <div class="col-3">
            <a asp-action="Index" class="btn btn-outline-success form-control"><i class="fas fa-home"></i></a>
        </div>
        <div class="col-3"></div>
        <div class="col-3"></div>
        <div class="col-3">
            <button type="submit" class="btn btn-outline-danger form-control">
                <i class="far fa-trash-alt"></i>
            </button>
        </div>
    </div>
</form>