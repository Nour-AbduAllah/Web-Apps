@model OnlineShop.Areas.Admin.Models.UserRoleVm
@{
    ViewData["title"] = "Assign User Role";
}
<h3 class="text-info">Assign User Role</h3>
<div class="col col-12 border">
    <form asp-area="Admin" asp-controller="Role" asp-action="Assign" method="post" class="col-5">
        <div class="p-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h3>@ViewBag.message</h3>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="UserId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="UserId" asp-items="ViewBag.UserId" class ="form-control"></select>
                </div>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="RoleId"></label>
                </div>
                <div class="col-8">
                    <select asp-for="RoleId" asp-items="ViewBag.RoleId" class ="form-control"></select>
                </div>
                <span asp-validation-for="RoleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i></button> |
                <a asp-area="Admin" asp-controller="Role" asp-action="UserRole" class="btn btn-outline-success">
                    <i class="fa fa-home"></i>
                </a>
            </div>
        </div>

    </form>
</div>
