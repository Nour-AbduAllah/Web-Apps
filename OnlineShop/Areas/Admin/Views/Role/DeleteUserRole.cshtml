@model OnlineShop.Areas.Admin.Models.UserRoleVm
@{
    ViewData["title"] = "Delete User Role";
}
<h3 class="text-info">Delete User Role</h3>
<div class="col col-12 border">
    <form asp-area="Admin" asp-controller="Role" asp-action="DeleteUserRole" method="post" class="col-5">
        <input type="hidden" asp-for="RoleId" />
        <input type="hidden" asp-for="UserId" />
        <div class="p-4">
            <dl class="row">
                <dt class="col-sm-2">
                    <b>User</b>
                </dt>
                <dd class="col-sm-10">
                    <span>@ViewBag.UserRole.UserName</span>
                </dd>

                <dt class="col-sm-2">
                    <b>Role</b>
                </dt>
                <dd class="col-sm-10">
                    <span>@ViewBag.UserRole.RoleName</span>
                </dd>
            </dl>
            <div class="form-group">
                <button type="submit" class="btn btn-danger"><i class="far fa-trash-alt"></i></button> |
                <a asp-area="Admin" asp-controller="Role" asp-action="UserRole" class="btn btn-outline-success">
                    <i class="fa fa-home"></i>
                </a>
            </div>
        </div>

    </form>
</div>
